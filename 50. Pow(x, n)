class Solution {
public:
    double myPow(double x, int n) {
        
        if (x == 0) {
            if (n < 0) return NAN; 
            return 0.0;              
        }

        if (n == 0) return 1.0;

        double pow = 1.0;

        if (n > 0) {
            for (int i = 0; i < n; i++) {
                pow *= x;
            }
        } 
        else {  
            int i = n;
            while (i < 0) {
                pow *= 1.0 / x;
                i++;
            }
        }
        return pow;   
    }
};
